<div lass="row">
  <div class="col-md-8">
    <h3>Latest Posts</h3>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <li><%= render 'microposts/micropost_content', micropost: @micropost %></li>
        <% if @micropost.prev %>
          <li><%= render 'microposts/micropost_content', micropost: @micropost.prev %></li>
        <% end %>
        <% if @micropost.prev.prev %>
          <li><%= render 'microposts/micropost_content', micropost: @micropost.prev.prev %></li>
        <% end %>
      </div>
    </div>
  </div>
  <aside class="col-md-4">
    <section class="user-info">
      <%= render 'shared/user_info' %>  
      <%= render 'shared/aside_menu' %>  
    </section>
  </aside>
</div>