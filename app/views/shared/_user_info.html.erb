<% if user %>
  <section class="user-info">
    <div class="profile clearfix">
      <%= link_to user do %>
        <%= attachment_image_tag user, :profile_image, size: "70x70", format: 'jpeg', class: "", fallback: "no_image.png" %>
        <h3><%= user.name %></h3>
      <% end %>
    </div>
    <%= simple_format(user.introduction) %>
    <p class="to-profile"><%= link_to "About myself", user %></p>
  </section>
<% end %>