<% if @first_user %>
  <section class="user-info">
    <h4>Blog owner</h4>
    <div class="profile clearfix">
      <%= link_to @first_user do %>
        <%= attachment_image_tag @first_user, :profile_image, size: "70x70", format: 'jpeg', class: "", fallback: "no_image.png" %>
        <h3><%= @first_user.name %></h3>
      <% end %>
    </div>
    <%= simple_format(@first_user.introduction) %>
    <p class="to-profile"><%= link_to "About myself", @first_user %></p>
  </section>
<% end %>