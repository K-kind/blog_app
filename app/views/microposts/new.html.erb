<div class="row">
  <div class="col-md-8 col-md-offset-2 new-post">
    <h3>New post</h3>
    <%= form_for(@micropost) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :content %>
        <%= f.rich_text_area :content, placeholder: "Compose new micropost..." %>

        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.label :category %>
        <%= f.text_field :category, class: "form-control" %>
      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>