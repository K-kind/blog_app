<section class="post-content">
  <h4><%= link_to micropost.title, micropost %></h4>
  <div><%= micropost.content %></div>
  <p>Category : <%= micropost.category %></p>
  <p>Posted at : <%= micropost.created_at.strftime("%Y/%m/%d(%a)") %></p>
  <% if micropost.created_at.to_date != micropost.updated_at.to_date %>
    <p>Updated at : <%= micropost.updated_at.strftime("%Y/%m/%d(%a)") %></p>
  <% end%>
</section>