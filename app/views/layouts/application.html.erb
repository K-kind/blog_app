<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>

  <body>
    <header class="clearfix">
      <div class="container header-container">
        <nav class="header-left">
          <h1><%= link_to "Progress", root_path %></h1>
        </nav>
        <nav class="header-right">
          <ul>
            <% if logged_in? %>
              <% if admin_user?(current_user) %>
                <li><%= link_to "New post", new_micropost_path %></li>
                <li><%= link_to "Users", users_path %></li>
              <% end %>
              <%= link_to current_user do %>
                <li class="header-user">
                <% if current_user.profile_image.attached? %>
                  <%= image_tag current_user.profile_image, height: "60" %>
                <% else %>
                  <%= image_tag "no_image.png", size: '60x60' %>
                <% end %>
                </li>
                <li class="header-user">: <%= current_user.name %></li>
              <% end %>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Signup", signup_path %></li>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container body">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%# <%= debug(params) if Rails.env.development? %>
    </div>
    <footer class="clearfix">
      <div class="container footer">
        <h3 class="footer-left">Progress</h3>
        <p class="footer-right"><a href="#" id="top-btn"><span class="glyphicon glyphicon-arrow-up"></span> Top</a></p>
      </div>
    </footer>
  </body>
</html>
