<% provide(:title, @user.name ) %>
<div class="row">
  <div class="col-md-9 main">
    <div class="row">
      <div class="col-xs-12 col-md-10 col-md-offset-1 intro-post">
        <h3><%= @user.name %></h3>
        <%= attachment_image_tag @user, :profile_image, size: "150x150", format: 'jpeg', class: "", fallback: "no_image.png" %>
        <div class="profile-text">
          <%= simple_format(@user.introduction) %>
        </div>
        <% if @user == current_user %>
          <span class="glyphicon glyphicon-wrench"> </span><%= link_to "User settings", edit_user_path(current_user), class: "setting-link" %>
        <% end %>
        <h4>Commented posts</h4>
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="title-col">Title</th>
              <th>Category</th>
              <th>Posted at</th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |c| %>
              <tr>
                <td class="title-col"><%= link_to c.micropost.title, c.micropost, class: "table-link" %></td>
                <td><%= link_to c.micropost.category, c.micropost, class: "table-link" %></td>
                <td><%= link_to c.micropost.created_at.strftime("%Y/%m/%d(%a)"), c.micropost, class: "table-link" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @comments %>
      </div>
    </div>
  </div>
  <aside class="col-md-3">
    <%= render 'shared/user_info' %>  
    <%= render 'shared/aside_menu' %>  
  </aside>
</div>